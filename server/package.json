    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-prettier": "^3.4.0",
    "faker": "^5.5.3",
    "jest": "^27.0.4",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.1",
    "ts-lint": "^4.5.1",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.4"
  }
